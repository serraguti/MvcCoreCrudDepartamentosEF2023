@model List<Departamento>

<h1>
    Departamentos CRUD EF
</h1>
<p>
    <a asp-controller="Departamentos"
        asp-action="Create">
        Create New
    </a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Localidad</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Departamento dept in Model)
        {
            <tr>
                <td>@dept.Nombre</td>
                <td>@dept.Localidad</td>
                <td>
                    <a asp-controller="Departamentos"
                        asp-action="Details"
                        asp-route-iddepartamento="@dept.IdDepartamento"
                        class="btn btn-outline-info">
                        Details
                    </a>
                    <a asp-controller="Departamentos"
                        asp-action="Edit"
                        asp-route-iddepartamento="@dept.IdDepartamento"
                        class="btn btn-info">
                        Edit
                    </a>
                    <a asp-controller="Departamentos"
                        asp-action="Delete"
                        asp-route-iddepartamento="@dept.IdDepartamento"
                        class="btn btn-danger">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>